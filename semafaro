  pinMode(S2GREEN,OUTPUT);
  
  Serial.println("Iniciou o Semafaro");
  
  s1aberto = true;
  s2aberto = false;
  
  
}

void loop(){ 
  
  if(count <= 500){
    semafaroEstado1(true);
    
    if(count == 500){
       s1aberto = false;
        s2aberto = true;
    }
    count++;
    delay(1);
  }
  Serial.println(count);
  
  if(count >= 500){
    Serial.println("entrou");
    if(s2aberto){

      ligaLed(S1GREEN,LOW);
      ligaLed(S1YELLOW,LOW);
      ligaLed(S1RED,HIGH);

      ligaLed (S2GREEN,HIGH); 
      ligaLed(S2YELLOW,LOW);
